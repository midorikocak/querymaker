{
    "name": "midorikocak/querymaker",
    "type": "library",
    "description": "QueryMaker is a little library that helps you create simple PDO queries",
    "keywords": [
        "midorikocak",
        "querymaker"
    ],
    "homepage": "https://github.com/midorikocak/querymaker",
    "license": "MIT",
    "authors": [
        {
            "name": "Midori Kocak",
            "email": "mtkocak@gmail.com",
            "homepage": "https://mtkocak.net",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.4"
    },
    "require-dev": {
        "opsway/psr12-strict-coding-standard": "^0.3.0",
        "phpunit/php-token-stream": "^3.1",
        "phpunit/phpunit": ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "midorikocak\\querymaker\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "midorikocak\\querymaker\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
